<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detailed Weekly Stats"
            android:textColor="#4CAF50"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_extrabold"
            android:layout_marginBottom="24dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Monday: 1800 kcal"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Tuesday: 2000 kcal"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Wednesday: 1900 kcal"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Thursday: 1850 kcal"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Friday: 2100 kcal"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Saturday: 2200 kcal"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Sunday: 2100 kcal"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:fontFamily="@font/montserrat_medium" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
